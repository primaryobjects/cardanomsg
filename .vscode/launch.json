    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "env": {
                "BlockFrostProjectId": "<BLOCKFROST_PROJECT_ID>",
                "SenderSecretPathName": "<SENDER_SECRET_JSON_PATH>",
                "RecipientAddress": "<RECIPIENT_ADDRESS>"
            },
            "console": "integratedTerminal"
        }
    ]
}